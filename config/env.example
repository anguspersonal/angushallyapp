# Application
NODE_ENV=         # e.g. development

# Service Ports
PORT=5000         # Web server port (default: 5000)
DB_PORT=5432      # Database port (default: 5432, ignored if DATABASE_URL is set)

# Database Configuration
DATABASE_URL=     # Production database URL (if set, DB_PORT is ignored)

# Production Database Configuration (used if DATABASE_URL is not set)
PROD_DB_HOST=
PROD_DB_NAME=
PROD_DB_USER=
PROD_DB_PORT=
PROD_DB_PASSWORD=
HEROKU_CLI=       # e.g. heroku pg:psql <your-prod-db> --app <your-app-name>

# Development Database Configuration
DEV_DB_HOST=
DEV_DB_NAME=
DEV_DB_USER=
DEV_DB_PASSWORD=
DEV_DB_SEARCH_PATH=

# Authentication
JWT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Services
GOOGLE_MAPS_API_KEY=    # Used for REACT_APP_GOOGLE_MAPS_API_KEY
GOOGLE_MAPS_MAP_ID=     # Used for REACT_APP_GOOGLE_MAPS_MAP_ID

# Strava Integration
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_API_SETTINGS=    # e.g. https://www.strava.com/settings/api
STRAVA_WEBHOOK_SECRET=
STRAVA_REDIRECT_URI=    # e.g. http://localhost:5000/api/strava/callback

# Email Configuration (for notifications only)
EMAIL_USER=
EMAIL_PASS=
RECIPIENT_EMAIL=

# Security
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=     # Used for REACT_APP_RECAPTCHA_SITE_KEY

# Note: The following React environment variables are automatically generated
# by sync-env.js â€“ do not set these manually:
#   REACT_APP_API_BASE_URL        (from PORT)
#   REACT_APP_GOOGLE_CLIENT_ID    (from GOOGLE_CLIENT_ID)
#   REACT_APP_GOOGLE_MAPS_API_KEY (from GOOGLE_MAPS_API_KEY)
#   REACT_APP_GOOGLE_MAPS_MAP_ID  (from GOOGLE_MAPS_MAP_ID)
#   REACT_APP_RECAPTCHA_SITE_KEY  (from RECAPTCHA_SITE_KEY)