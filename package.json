{
  "name": "heroku-cra-node",
  "version": "3.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "scripts": {
    "start": "node server",
    "build": "npm run sync-env && cd react-ui/ && npm install && npm run build",
    "dev": "npm run sync-env && cd react-ui/ && npm install && npm start",
    "test": "npx jest server/tests",
    "test--verbose": "npx jest server/tests --verbose",
    "sync-env": "node scripts/sync-env.js",
    "prestart": "npm run sync-env",
    "predevelop": "npm run sync-env"
  },
  "type": "commonjs",
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.17.0",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "supertest": "^7.0.0",
    "typescript": "^4.9.5",
    "puppeteer": "^24.1.1",
    "@googlemaps/js-api-loader": "^1.16.8",
    "@googlemaps/markerclusterer": "^2.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mars/heroku-cra-node.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "main": "index.js",
  "author": "angushally",
  "bugs": {
    "url": "https://github.com/mars/heroku-cra-node/issues"
  },
  "homepage": "https://github.com/mars/heroku-cra-node#readme"
}
